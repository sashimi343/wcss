<!-- Start of deadline timer -->
<script type="text/javascript">
$(function () {
    countDown("<%= @deadline_unix %>");
});
</script>
<h2>締め切りタイマー</h2>
<div id="deadline-timer"></div>
<!-- End of deadline timer -->
<form id="submit" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label class="control-label col-sm-3" for="wav_file">曲ファイル (*)</label>
        <div class="col-sm-9">
            <input type="file" name="wav_file" accept="audio/wav" required />
            <span class="help-block">200MiBまでの.wavファイルをアップロードできます</span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="song_title">曲名 (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="song_title" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="artist">アーティスト名 (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="artist" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="comment">コメント</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="comment" />
        </div>
    </div>
    <button class="btn btn-primary col-sm-offset-3" type="button">送信</button>
</form>
