<% unless @composers.empty? %>
<table class="table table-striped table-sorter">
    <thead>
        <tr><th>ID</th><th>名前</th><th>連絡先</th><th>作成日時</th><th>変更日時</th><th></th></tr>
    </thead>
    <tbody>
    <% @composers.each do |composer| %>
        <tr>
            <td><%= composer.registration_id %></td>
            <td><%= CGI.escapeHTML composer.name.to_s %></td>
            <td><%= CGI.escapeHTML composer.contact.to_s %></td>
            <td><%= composer.created_at %></td>
            <td><%= composer.updated_at %></td>
            <td><a href="/admin/composers/<%= composer.registration_id %>">編集</a></td>
        </tr>
    <% end %>
    </tbody>
</table>
<% end %>
<h2>作曲者を追加する</h2>
<form id="add-composer" class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-3" for="registration_id">ID (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="registration_id" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="password">パスワード (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="password" name="password" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="password_confirmation">パスワード (確認) (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="password" name="password_confirmation" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="name">名前 (*)</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="name" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="contact">連絡先</label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="contact" />
        </div>
    </div>
    <button class="btn btn-primary col-sm-offset-3" type="button">追加</button>
</form>
<p><a class="btn btn-default" href="/admin">戻る</a></p>
