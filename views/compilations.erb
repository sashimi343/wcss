<table class="table table-striped">
    <thead>
        <tr><th>ID</th><th>title</th><th>deadline</th><th>created at</th><th>updated at</th><th></th></tr>
    </thead>
    <tbody>
    <% @compilations.each do |compilation| %>
        <tr>
            <td><%= compilation.compilation_name %></td>
            <td><%= compilation.title %></td>
            <td><%= compilation.deadline.in_time_zone 'Asia/Tokyo' %></td>
            <td><%= compilation.created_at.in_time_zone 'Asia/Tokyo' %></td>
            <td><%= compilation.updated_at.in_time_zone 'Asia/Tokyo' %></td>
            <td><a href="/admin/compilations/<%= compilation.compilation_name %>">edit</a></td>
        </tr>
    <% end %>
    </tbody>
</table>
<h2>Hold new compilation</h2>
<form class="form-horizontal" method="POST" action="">
    <div class="form-group">
        <label class="control-label col-sm-3" for="compilation_name">ID </label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="compilation_name" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="title">title </label>
        <div class="col-sm-9">
            <input class="form-control" type="text" name="title" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="description">description </label>
        <div class="col-sm-9">
            <textarea class="form-control" name="description" cols="40" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="requirement">requirement (newline delimited) </label>
        <div class="col-sm-9">
            <textarea class="form-control" name="requirement" cols="40" rows="10"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="deadline">deadline </label>
        <div class="col-sm-9">
            <input class="form-control" type="datetime-local" name="deadline" value="<%= Time.current.strftime "%Y-%m-%dT%H:%M" %>" />
        </div>
    </div>
    <input class="btn btn-primary col-sm-offset-3" type="submit" value="create" />
</form>
<p><%= @error_message %></p>
<p><a class="btn btn-default" href="/admin">Back</a></p>
